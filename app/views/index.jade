extends ./layouts/default

block content
  .row.home
    .page-header
      h1 Te ayudamos a visualizar México
      h3 Si lo tuyo es contar historias a traves de mapas y quieres hacerlo facilmente, esta es tu opción


  .row(style="text-align:center; margin: 20px;")
    a.btn.btn-default.btn-lg(href="/create") Iniciar

  .row.options
    .col-xs-3.option
      h3 Utiliza tu informacion
      p Procesamos archivos csv, xls o tus documentos de Google Docs son utiles.
    .col-xs-3.option
      h3 Construye mapas
      p Usa mapas de los estados y municipios.
    .col-xs-3.option
      h3 Utiliza graficas
      p No te pueden faltar graficas para visualizar tu informacion
    .col-xs-3.option
      h3 Comparte
      p Comparte tus visualizaciones al mundo.

  .footer



append stylesheet
  style(type='text/css').
    body{
      background:url("./images/bandera_large.jpg") no-repeat; 
      background-size:100%;
    }

    .page-header{
      min-height: 320px;
    }
    .home {
      text-align: center;
    }

    h1 {
      color: #fff;
      position: absolute;
      font-size: 6em;
      text-shadow: 3px 3px 3px #888;
    }

    .page-header h3 {
      float:right;
      margin-top:280px;
      text-align:right;
      color:#fff
    }

    .options {
      margin: 30px 0 30px 0;
      background-color: rgba(250,250,250,0.9);
      height: 150px;
      padding: 5px 0px;
    }

    .option {
      border-left: 1px solid #ddd;
      border-right: 1px solid #ddd;
      height: 100%;
      padding: 10px 15px;
      text-align: center;
    }
